<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBluePalette</item>
        <item name="colorPrimaryDark">@color/colorDarkBluePalette</item>
        <item name="colorAccent">@color/colorYellowPalette</item>
        <item name="android:textColor">@color/colorGreyPalette</item>

    </style>

</resources>